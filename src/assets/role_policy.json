{
    "Version": "2012-10-17",
    "Statement": [
      {
        "Effect": "Allow",
        "Principal": {
          "Service": "translate.amazonaws.com"
        },
        "Action": "sts:AssumeRole",
        "Condition": {
          "ArnLike": {
              "aws:SourceArn": "arn:aws:translate:*:your_account_id:*"
          },
          "StringEquals": {
              "aws:SourceAccount": "your_account_id"
          }
        }
      }
    ]
  }